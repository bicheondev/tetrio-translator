{
  "manifest_version": 3,
  "name": "TETR.IO 한국어 패치",
  "version": "1.0",
  "description": "한국어로 즐기는 TETR.IO",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://tetr.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://tetr.io/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
